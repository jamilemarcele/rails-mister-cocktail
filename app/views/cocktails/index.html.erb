</div>

<h1 class="mb-3 mt-3">All Cocktails</h1>

<p> <%= @no_cocktails_found %></p>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
          <div class="card-header" style="background-image: url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
          </div>
          <div class="card-body">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
