<%= render 'components/navbar-home'%>

<div class="home-banner" style="background-image: url('https://images.unsplash.com/photo-1473949103155-d89f3aa93cf1?ixlib=rb-1.2.1&w=1050')">
  <div class="banner-text">
    <h1>Mr Happy Hour</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>
</div>

<h2 class="cocktail-header mb-4 mt-4 text-center" style="color: #39311d">All Cocktails</h2>

<p class="text-center"> <%= @no_cocktails_found %></p>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-lg-4 mb-4">
        <%= link_to cocktail_path(cocktail), class: "card-links" do %>
          <% if cocktail.photo.present? %>
            <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, crop: :fill %>')">
              <div class="cocktail-card-text">
                <p> <%= cocktail.name %></p>
              </div>
            </div>
          <% else %>
            <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1486428263684-28ec9e4f2584?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1268&q=80')">
              <div class="cocktail-card-text">
                <p> <%= cocktail.name %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

