<div class="mt-3">
  <%= simple_form_for [ @cocktail, @review ], html: { class: "review-form"} do |f| %>
    <%= f.input :name, label: "Name:", placeholder: "Your name.." %>
    <%= f.input :content, label: "Review:", placeholder: "I love this cocktails because.." %>
    <%= f.input :rating, label: "Rating:", :collection => %w[1 2 3 4 5] %>
    <%= f.submit "Submit", class: "btn btn-dark" %>
  <% end %>
</div>
